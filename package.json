{
  "name": "family-dashboard",
  "version": "1.0.0",
  "description": "Family calendar dashboard for Raspberry Pi",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install:all": "npm install && cd client && npm install",
    "find-email": "node scripts/find-service-account-email.js",
    "fetch-events": "node scripts/fetch-events.js",
    "fetch-electricity": "node scripts/fetch-electricity.js",
    "fetch-news": "node scripts/fetch-news.js",
    "find-bus-stop": "node scripts/find-bus-stop.js",
    "fetch-hue-devices": "node scripts/fetch-hue-devices.js",
    "create-hue-app-key": "node scripts/create-hue-app-key.js",
    "check-hue-room": "node scripts/check-hue-room.js",
    "check-hue-gamut": "node scripts/check-hue-gamut.js"
  },
  "keywords": [
    "calendar",
    "dashboard",
    "raspberry-pi"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "googleapis": "^126.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
